# Application
NODE_ENV=development
PORT=3000
APP_NAME=NestJS Template

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nestjs_template?schema=public

# JWT
JWT_SECRET=change_this_to_a_secure_random_string
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OTP
OTP_SECRET=change_this_to_a_secure_random_string
OTP_EXPIRATION=5
OTP_STEP=30
OTP_DIGITS=6

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com
SMTP_SECURE=false

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3001

# Swagger
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true
CORS_PREFLIGHT=false
CORS_ALLOWED_HEADERS=Content-Type,Authorization,Accept,Accept-Language
CORS_EXPOSED_HEADERS=Content-Length,Content-Range
CORS_MAX_AGE=3600
